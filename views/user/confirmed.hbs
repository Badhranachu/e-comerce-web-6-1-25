<div class="container mt-5">
  <h2 class="text-center mb-4 text-primary">Order Confirmed!</h2>

  <div class="text-center">
    <!-- Display Product Image -->
    <img
      src="{{productImage}}"
      alt="{{productName}}"
      class="img-fluid mb-4 rounded shadow"
      style="max-height: 200px;"
    />

    <!-- Display Product Details -->
    <div class="card p-4 shadow-sm mb-4 border-0">
      <h4 class="card-title text-dark mb-3">
        <strong>Product:</strong> {{productName}}
      </h4>
      <p class="card-text">
        <strong>Quantity:</strong> {{quantity}}
      </p>
      <p class="card-text">
        <strong>Total Price:</strong> â‚¹{{totalPrice}}
      </p>
      <p class="card-text">
        <strong>Payment Method:</strong> {{paymentMethod}}
      </p>
      <!-- Optionally Display Product ID -->
      <p class="card-text">
        <strong>Product ID:</strong> {{productId}}
      </p>
    </div>
  </div>

  <p class="text-center mt-4 text-success">
    Thank you for your order! Your payment has been successfully processed.
  </p>

  <div class="text-center mt-3">
    <a href="/" class="btn btn-primary btn-lg mx-2">
      <i class="bi bi-house"></i> Back to Home
    </a>
    <a href="/orders" class="btn btn-secondary btn-lg mx-2">
      <i class="bi bi-card-list"></i> View All Orders
    </a>
  </div>
</div>
