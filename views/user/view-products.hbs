    position: relative;
  }

  .product-card img {
    width: 90%;
    height: 250px;
    object-fit: contain;
    padding: 10px;
    border-radius: 5px;
  }

  .card-body {
    padding: 10px;
    flex-grow: 1;
  }

  .card-title {
    font-size: 1rem;
    margin-bottom: 0.5rem;
  }

  .card-text {
    font-size: 0.9rem;
    color: #666;
  }

  .button-container {
    height: 50px;
    display: flex;
