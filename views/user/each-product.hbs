  }

  .extra-info h4 {
    font-size: 18px;
    font-weight: bold;
    color: #333;
    margin-bottom: 10px;
  }

  .extra-info ul {
    padding-left: 20px;
  }

  .extra-info li {
    font-size: 14px;
    color: #555;
  }
</style>
